{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "dockerfile": {
    "fileMatch": [
      "(^|/|\\.)Containerfile$",
      "(^|/)Containerfile[^/]*$"
    ]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchDatasources": ["docker"],
      "matchPackageNames": ["docker.io/archlinux"],
      "versioning": "regex:^(?<compatibility>([\\w-]+)-)?(?<patch>\\d{8}\\.\\d{1}\\.\\d+)?$"
    }
  ]
}
